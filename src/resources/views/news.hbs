<link rel="stylesheet" href="/css/admin.css">


<!--===== CRUD TABLE =======-->

<body>
  <div class="container-xl">
    <div class="table-responsive">
      <div class="table-wrapper">
        <div class="table-title">
          <div class="row">
            <div class="col-sm-6">
              <h2>QUẢN LÝ <b>BỆNH NHÂN</b></h2>
            </div>
            <div class="col-sm-6">
              <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i
                  class="icofont-ui-add"></i><span>Thêm bệnh nhân</span></a>
              <a href="#deleteEmployeeModal" class="btn btn-danger check-all-submit-btn disabled" data-toggle="modal"><i
                  class="icofont-ui-delete"></i> <span>Xóa bệnh nhân</span></a>
            </div>
          </div>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>
                <div class="form-checkbox">
                  <input class="form-checkbox-input" type="checkbox" id="checkbox-all">
                </div>
              </th>
              <th scope="col">Số thứ tự</th>
              <th scope="col">Link</th>
              <th scope="col">Nội Dung</th>
              <th scope="col">Ngày</th>
              <th scope="col">hình ảnh</th>
              <th scope="col">tiêu đề</th>
            </tr>
          </thead>
          <tbody>
            {{#each datanews}}
            <tr>
              <td>
                <div class="form-checkbox">
                  <input class="form-checkbox-input" type="checkbox" name="patientIds[]" value="{{link}}">
                </div>
              </td>
              <td scope="row">{{sum @index 0}}</td>
              <td scope="row">{{Link}}</td>
              <td scope="row">{{content}}</td>
              <td scope="row">{{date}}</td>
              <td scope="row">{{image}}</td>
              <td scope="row">{{title}}</td>
              <td>
                <a href="#update-patient-modal" class="edit" data-toggle="modal" data-patient="{{Link}}"><i
                    class="icofont-edit" data-toggle="tooltip" title="Edit"></i></a>
                <a href="#delete-patient-modal" class="delete" data-toggle="modal" data-patient="{{link}}"><i
                    class="icofont-ui-delete" data-toggle="tooltip" title="Delete"></i></a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Add Modal -->
  <div id="addEmployeeModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/news" method="POST">
          <div class="modal-header">
            <h4 class="modal-title">Thêm bệnh nhân</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <input type="text" class="form-control" name="link" placeholder="Link">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="content" placeholder="Nội dung">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="date" placeholder="Ngày">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="image" placeholder="Hình ảnh">
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="title" placeholder="Tiêu đề">
            </div>
          </div>
          <div class="modal-footer">
            <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
            <input type="submit" class="btn btn-success" value="Add">
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Modal HTML -->
  <div class="modal fade" id="delete-patient-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Xóa tin tức?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Bạn chắc chắc muốn xóa tin tức này!!!
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
          <button id="btn-delete-statistics" type="button" class="btn btn-danger">Xóa bỏ</button>
        </div>
      </div>
    </div>
  </div>
  {{!-- Delete form hide --}}
  <form name="delete-statistics-form" action="/news/{{Link}}?_method=DELETE" method="POST"></form>

  <!-- Edit Modal HTML -->
  <div id="update-patient-modal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <form name="update-statistics-form" action="/news/{{link}}?_method=PUT" method="POST">
          <div class="modal-header">
            <h4 class="modal-title">Edit Employee</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          </div>
          <div class="modal-body">
            {{!-- {{#each statistical}} --}}
            <div class="form-group">
              <label>Bệnh Nhân</label>
              <input type="text" class="form-control" value="{{statistical.link}}" id="link" name="link" required>
            </div>
            <div class="form-group">
              <label>Tuổi</label>
              <input type="text" class="form-control" value="{{content}}" name="content" required>
            </div>
            <div class="form-group">
              <label>Địa chỉ</label>
              <input type="text" class="form-control" value="{{date}}" name="date" required>
            </div>
            <div class="form-group">
              <label>Tình Trạng</label>
              <input type="text" class="form-control" value="{{image}}" name="image" required>
            </div>
            <div class="form-group">
              <label>Quốc tịch</label>
              <input type="text" class="form-control" value="{{title}}" name="title" required>
            </div>
          </div>
          <div class="modal-footer">
            <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
            <input type="submit" id="btn-update-statistics" class="btn btn-info" value="Save">
          </div>
        </form>
      </div>
    </div>
  </div>
  <!--==== End CRUD TABLE ====-->


  <script>
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
      acc[i].addEventListener("click", function () {
        this.classList.toggle("active");
        var panel = this.nextElementSibling;
        if (panel.style.maxHeight) {
          panel.style.maxHeight = null;
        } else {
          panel.style.maxHeight = panel.scrollHeight + "px";
        }
      });
    }

    //btn delete
    document.addEventListener('DOMContentLoaded', function () {
      var patientID;
      var deleteForm = document.forms['delete-statistics-form'];
      var btnDeleteStatistics = document.getElementById('btn-delete-statistics');
      var checkboxAll = $('#checkbox-all');
      var patientItemCheckbox = $('input[name="patientIds[]"]');
      var checkAllSubmitBtn = $('.check-all-submit-btn');

      //When dialog confirm clicked
      $('#delete-patient-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget)
        patientID = button.data('Link');
        console.log(patientID);
      });
      btnDeleteStatistics.onclick = function () {
        deleteForm.action = '/news/' + patientID + '?_method=Delete';
        deleteForm.submit();
      }

      //Checkbox all changed
      checkboxAll.change(function () {
        var isCheckedAll = $(this).prop('checked');
        patientItemCheckbox.prop('checked', isCheckedAll);
      });

      //Checkbox item changed
      patientItemCheckbox.change(function () {
        var isCheckAll = patientItemCheckbox.length === $('input[name="patientIds[]"]:checked').length;
        checkboxAll.prop('checked', isCheckAll);
      });

      //Re-render check all submit button
      function renderCheckAllSubmitBtn() {
        var checkedCount = $('input[name="patientIds[]"]:checked').length;
        console.log(checkedCount)
      }
      console.log(checkAllSubmitBtn);
    });

    //btn update
    document.addEventListener('DOMContentLoaded', function () {
      var patientID;
      var updateForm = document.forms['update-statistics-form'];
      var btnUpdateStatistics = document.getElementById('btn-update-statistics');
      $('#update-patient-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget)
        patientID = button.data('link');
        console.log(patientID);
      });
      btnUpdateStatistics.onclick = function () {

        updateForm.action = '/news/' + patientID + '?_method=PUT';
        updateForm.submit();
      }
    });

  </script>
</body>